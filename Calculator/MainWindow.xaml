<Window x:Class="Calculator.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="_Calculator"
    mc:Ignorable="d"
    Title="MainWindow" Height="550" Width="455">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="257*"/>
        </Grid.RowDefinitions>
        <Button x:Name="memory_resource" Content="MR" FontSize="24" HorizontalContentAlignment="Center" Margin="0,130,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Center" Width="55" Grid.Row="1" Click="memory_resource_Click"/>
        <Button x:Name="memory_clear" Content="MC" FontSize="24" HorizontalContentAlignment="Center" Margin="125,130,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Grid.Row="1" Click="memory_clear_Click"/>
        <Button x:Name="plus_minus" Content="±" FontSize="24" HorizontalContentAlignment="Center" Margin="50,130,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Grid.Row="1" Click="plus_minus_Click"/>
        <Button x:Name="memory_plus" Content="M+" FontSize="24" HorizontalContentAlignment="Center" Margin="275,130,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Grid.Row="1" Click="memory_plus_Click"/>
        <Button x:Name="only" Content="除算後" FontSize="12" HorizontalContentAlignment="Center" Margin="350,130,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="only_Click" Grid.Row="1" />
        <Button x:Name="back_space" Content="→" FontSize="24" HorizontalContentAlignment="Center" Margin="50,205,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="back_space_Click" Grid.Row="1"/>
        <Button x:Name="one" Content="1" FontSize="24" HorizontalContentAlignment="Center" Margin="125,205,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="one_Click" Grid.Row="1"/>
        <Button x:Name="two" Content="2" FontSize="24" HorizontalContentAlignment="Center" Margin="0,205,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Center" Width="55" RenderTransformOrigin="9.756,0.142" Click="two_Click" Grid.Row="1" />
        <Button x:Name="three" Content="3" FontSize="24" HorizontalContentAlignment="Center" Margin="275,205,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="three_Click" Grid.Row="1" />
        <Button x:Name="division" Content="÷" FontSize="24" HorizontalContentAlignment="Center" Margin="350,205,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="division_Click" Grid.Row="1"/>
        <Button x:Name="clear" Content="C" FontSize="24" HorizontalContentAlignment="Center" Margin="50,280,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="clear_Click" Grid.Row="1" />
        <Button x:Name="four" Content="4" FontSize="24" HorizontalContentAlignment="Center" Margin="125,280,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="four_Click" Grid.Row="1" />
        <Button x:Name="five" Content="5" FontSize="24" HorizontalContentAlignment="Center" Margin="0,280,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Center" Width="55" Click="five_Click" Grid.Row="1" />
        <Button x:Name="six" Content="6" FontSize="24" HorizontalContentAlignment="Center" Margin="275,280,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="six_Click" Grid.Row="1" />
        <Button x:Name="multiply" Content="×" FontSize="24" HorizontalContentAlignment="Center" Margin="350,280,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="multiply_Click" Grid.Row="1" />
        <Button x:Name="all_clear" Content="AC" FontSize="24" HorizontalContentAlignment="Center" Margin="50,355,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="all_clear_Click" Grid.Row="1" />
        <Button x:Name="seven" Content="7" FontSize="24" HorizontalContentAlignment="Center" Margin="125,355,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="seven_Click" Grid.Row="1"/>
        <Button x:Name="eight" Content="8" FontSize="24" HorizontalContentAlignment="Center" Margin="0,355,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Center" Width="55" Click="eight_Click" Grid.Row="1" />
        <Button x:Name="nine" Content="9" FontSize="24" HorizontalContentAlignment="Center" Margin="275,355,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="nine_Click" Grid.Row="1" />
        <Button x:Name="minus" Content="-" FontSize="24" HorizontalContentAlignment="Center" Margin="350,355,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="minus_Click" Grid.Row="1" />
        <Button x:Name="zero" Content="0" FontSize="24" HorizontalContentAlignment="Center" Margin="50,430,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="zero_Click" Grid.Row="1" />
        <Button x:Name="double_zero" Content="00" FontSize="24" HorizontalContentAlignment="Center" Margin="125,430,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="double_zero_Click" Grid.Row="1" />
        <Button x:Name="decimal_point" Content="・" FontSize="24" HorizontalContentAlignment="Center" Margin="0,430,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Center" Width="55" Click="decimal_point_Click" Grid.Row="1"/>
        <Button x:Name="equal" Content="=" FontSize="24" HorizontalContentAlignment="Center" Margin="275,430,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="equal_Click" Grid.Row="1" />
        <Button x:Name="plus" Content="+" FontSize="24" HorizontalContentAlignment="Center" Margin="350,430,0,0" VerticalContentAlignment="Center" Height="55" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55" Click="plus_Click" Grid.Row="1"  />
        <Label x:Name="lblDisplay" Background="LightGray" HorizontalAlignment="Center" Height="60" Margin="0,30,0,0" VerticalAlignment="Top" Width="355" HorizontalContentAlignment="Right"  FontSize="32" VerticalContentAlignment="Center" Grid.Row="1"/>
        <Label x:Name="subDisplay" Content="" Background="LightGray" Height="24" Margin="259,13,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Right"  FontSize="12.8" VerticalContentAlignment="Center" Grid.RowSpan="2" HorizontalAlignment="Left" Width="142"/>

    </Grid>
</Window>
